--// AutoObby - GOD MODE (VIP + SCRIPT AUTO-RESTART)
--// NEVER dies, NEVER leaves VIP, NEVER stops
--// Place in autoexec → YOU ARE ETERNAL

local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TeleportService = game:GetService("TeleportService")
local VirtualUser = game:GetService("VirtualUser")

local PLACE_ID = 11276071411
local VIP_SHARE_CODE = "d610a52456bfe5468e5b0e36bde089c2"  -- ← YOUR CODE
local SCRIPT_URL = "https://raw.githubusercontent.com/RobloxScriptDuH/sac/refs/heads/main/Scripty"

--// LocalPlayer
local plr = Players.LocalPlayer
if not plr then
    plr = Players.PlayerAdded:Wait()
end

--// Anti-AFK
task.spawn(function()
    while task.wait(2) do
        pcall(VirtualUser.ClickButton2, VirtualUser, Vector2.new())
    end
end)

--// Wait for Lobby
local lobby = Workspace:WaitForChild("Lobby", 10)
if not lobby then return end

--// QUEUE ON TELEPORT
local queueTeleport = syn and syn.queue_on_teleport or getgenv().queue_on_teleport or fluxus and fluxus.queue_on_teleport
if queueTeleport then
    plr.OnTeleport:Connect(function()
        pcall(queueTeleport, "loadstring(game:HttpGet('" .. SCRIPT_URL .. "'))()")
    end)
end

--// VIP URL (LOCKED)
local VIP_URL = "https://www.roblox.com/games/" .. PLACE_ID .. "?privateServerLinkCode=" .. VIP_SHARE_CODE

--// FORCE VIP
local function forceVIP()
    if queueTeleport then
        pcall(queueTeleport, "loadstring(game:HttpGet('" .. SCRIPT_URL .. "'))()")
    end
    print("GOD: FORCING VIP SERVER...")
    TeleportService:Teleport(PLACE_ID, plr, nil, nil, {VIP_URL})
end

--// VIP GUARDIAN (Every 3s)
task.spawn(function()
    while true do
        task.wait(3)
        local inVIP = string.find(game:GetService("ContentProvider").BaseUrl, VIP_SHARE_CODE) ~= nil
        if not inVIP then
            print("GOD: KICKED FROM VIP → REJOINING")
            forceVIP()
        end
    end
end)

--// SCRIPT HEARTBEAT (Auto-Restart if Dead)
local lastHeartbeat = tick()
local function heartbeat()
    lastHeartbeat = tick()
end

task.spawn(function()
    while true do
        heartbeat()
        task.wait(1)
    end
end)

--// AUTO-RESTART IF SCRIPT DIES
task.spawn(function()
    while true do
        task.wait(5)
        if tick() - lastHeartbeat > 10 then
            print("GOD: SCRIPT DIED → AUTO-RESTART")
            loadstring(game:HttpGet(SCRIPT_URL))()
            break
        end
    end
end)

--// OBBY (INSTANT)
task.spawn(function()
    task.wait(0.1)
    local char = plr.Character or plr.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    local obby = lobby:FindFirstChild("Obby")
    if not obby then return end

    local function touch(part)
        if not part then return end
        hrp.CFrame = part.CFrame + Vector3.new(0, 3, 0)
        if firetouchinterest then
            firetouchinterest(hrp, part, 0)
            firetouchinterest(hrp, part, 1)
        end
    end

    touch(obby:FindFirstChild("ObbyEndPart"))
    touch(obby:FindFirstChild("HardObbyEndPart"))

    print("Obby done → GOD MODE ACTIVE")
end)

print("AutoObby: GOD MODE LOADED - VIP + AUTO-RESTART")
